<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#F44336</item>
        <item name="colorPrimaryDark">#D32F2F</item>
        <item name="colorAccent">#4CAF50</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">#ef5350</item>
        <item name="colorControlHighlight">#ef5350</item>
    </style>

    <!--Text input layout style-->
    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">#ef5350</item>
        <item name="android:textColorHint">#212121</item>
    </style>

    <style name="Theme">theme</style>

    <!--Text style for headings in Add Medicine and Update Medicine Activity-->
    <style name="textStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:textColor">#D32F2F</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>
